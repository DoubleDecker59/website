  <body style="background-color: black; padding-top:150px; color:white">
    <form method= "POST">
      <div class="form-row col-7" style = "text-align: left;">
      <div class="form-group col-md-5  align-items-right"> 
        
          <label for="inlineFormInputGroup">Username</label>
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text">@</div>
            </div>
            <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="Username" name="username" required>
        </div>          
      </div>
        <div class="form-group col-md-5">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" class="form-control" id="exampleInputPassword1" name="pass1" required>
        </div>
        <div class="form-group col-md-5">
          <label for="exampleInputPassword2">Verify Password</label>
          <input type="password" class="form-control" id="exampleInputPassword2" name="pass2" required>
        </div>
            </div>
           <label for="checks">Permissions</label>
      <!--Add checkboxes for permissions, need if for determining if each is checked and we need one unless/if for disabling/need to think about the ability to make sure only admin can add 'all' permissions-->
      <div id="checks">
      <div class="form-check">
         <input class="form-check-input" type="checkbox" id="all"name="all" value="true">
         <label class="form-check-label" for="flexCheckChecked">
          All
        </label>
      </div>
      <div class="form-check">
         <input class="form-check-input" type="checkbox"id="new" name="new" value="true">
         <label class="form-check-label" for="flexCheckChecked">
          New
        </label>
      </div>
      <div class="form-check">
         <input class="form-check-input" type="checkbox"id="edit"name="edit" value="true">
         <label class="form-check-label" for="flexCheckChecked">
          Edit
        </label>
      </div>
      <div class="form-check">
         <input class="form-check-input" type="checkbox" id="files"name="files" value="true">
         <label class="form-check-label" for="flexCheckChecked">
          Files
        </label>
      </div>
        <div class = "col-12">
          <button type="submit" class="btn btn-primary">Create User</button>
 
          </div>
          
      </form>
      

